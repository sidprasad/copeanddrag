constraints:
  - orientation:
      selector: down
      directions:
        - directlyBelow
  - orientation:
      selector: right
      directions:
        - directlyRight
directives:
  - atomColor:
      selector: '{ hw: Cell | wins[hw.*right + *right.hw] }.*right'
      value: '#00f900'
  - atomColor:
      selector: '{ vw: Cell | wins[vw.*down + *down.vw] }.*down'
      value: '#00f900'
  - attribute:
      field: mark
  - flag: hideDisconnected
