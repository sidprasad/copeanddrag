{
  "name": "cope-and-drag",
  "version": "3.4.4",
  "description": "A web application for lightweight diagramming for Alloy/Forge.",
  "main": "dist/index.js",
  "keywords": [],
  "author": "Siddhartha Prasad",
  "license": "ISC",
  "devDependencies": {
    "@types/firebase": "^2.4.32",
    "@types/node": "^20.14.12",
    "@vercel/ncc": "^0.38.3",
    "chokidar": "^4.0.3",
    "cpy": "^11.1.0",
    "cpy-cli": "^5.0.0",
    "nodemon": "^3.1.9",
    "puppeteer": "^24.2.1",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "clean": "rimraf dist",
    "build": "npm run clean && ncc build src/index.ts -o dist && npm run copy-files && npm run copy-swagger",
    "copy-files": "cpy \"views/**/*\" dist/views && cpy \"public/**/*\" dist/public",
    "copy-swagger": "cpy \"node_modules/swagger-ui-dist/**/*\" dist/public/swagger-ui-dist",
    "start": "node dist/index.js",
    "prepublishOnly": "npm run build",
    "publish-docs": "mkdocs gh-deploy",
    "docs-local": "mkdocs serve"
  },
  "dependencies": {
    "@types/d3": "^7.4.3",
    "@types/graphlib": "^2.1.12",
    "@xmldom/xmldom": "^0.9.8",
    "adm-zip": "^0.5.16",
    "axios": "^1.7.9",
    "cassowary": "^0.0.2",
    "chroma-js": "^3.1.1",
    "d3": "^7.9.0",
    "dagre": "^0.8.5",
    "ejs": "^3.1.10",
    "express": "^4.18.2",
    "firebase": "^11.2.0",
    "forge-expr-evaluator": "github:karankashyap04/forge-expr-evaluator#e2389e79468b64e5b196da3bf522f0c7f5c37426",
    "graphlib": "^2.1.8",
    "i": "^0.3.7",
    "js-yaml": "^4.1.0",
    "jsdom": "^24.1.3",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "minimist": "^1.2.8",
    "multer": "^2.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "vector2": "^0.1.1",
    "webcola": "^3.4.0"
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "public/**/*",
    "views/**/*",
    "package.json",
    "README.md"
  ],
  "bin": {
    "copeanddrag": "./dist/index.js"
  }
}
